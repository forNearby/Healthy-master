<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_logo_imageview_img"
        android:layout_width="@dimen/logo_size_width"
        android:layout_centerInParent="true"
        android:background="@drawable/edittext_bg"
        android:padding="3dip"
        android:src="@mipmap/tb"
        android:layout_height="@dimen/logo_size_height" />
    <TextView
        android:id="@+id/activity_logo_textview_version"
        android:layout_below="@+id/activity_logo_imageview_img"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dip"
        android:text="V1.0"
        android:textSize="17sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_logo_textview_copyright"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="CopyRight 2016"
        android:layout_height="wrap_content" />

</RelativeLayout>