<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_life"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <RadioGroup
        android:id="@+id/fragment_life_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/fragment_life_rb_cook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/fragment_life_radiobutton_bg"
            android:drawablePadding="12dip"
            android:gravity="center"
            android:paddingTop="12dip"
            android:text="健康菜谱"/>

        <RadioButton
            android:id="@+id/fragment_life_rb_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:button="@null"
            android:drawableBottom="@drawable/fragment_life_radiobutton_bg"
            android:drawablePadding="12dip"
            android:gravity="center"
            android:paddingTop="12dip"
            android:text="健康食品"/>

    </RadioGroup>

    <FrameLayout
        android:id="@+id/fragment_life_content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>

</LinearLayout>