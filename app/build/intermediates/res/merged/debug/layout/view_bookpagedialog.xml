<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
			  android:background="@color/whilte"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/view_booklistpagedialog_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="1dp"
        app:titleTextColor="@color/whilte"/>

    <ScrollView
        android:id="@+id/view_booklistpagedialog_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.microanswer.healthy.view.HtmlView
                android:id="@+id/view_bookpagedialog_htmlview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/view_booklistpagedialog_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="上一篇"/>

                <Button
                    android:id="@+id/view_booklistpagedialog_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="下一篇"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>