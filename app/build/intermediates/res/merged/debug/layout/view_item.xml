<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/boder_click_bg_"
    android:clickable="true">


    <LinearLayout
        android:id="@+id/item_view_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12dip">

        <TextView
            android:id="@+id/item_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dip"/>

        <TextView
            android:id="@+id/item_view_small_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="副标题"
            android:visibility="gone" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/item_view_dataview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dip"
        android:layout_weight="1"/>


</LinearLayout>