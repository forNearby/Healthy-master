<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="3dp">

    <ImageView
        android:id="@+id/view_morelore_item_img"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@color/colorPrimary"/>

    <android.microanswer.healthy.view.AutoMoveTextView
        android:id="@+id/view_morelore_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/view_morelore_item_img"
        android:ellipsize="marquee"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="在接触感染体有病毒原题上不宜使用栓性食物"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/view_morelore_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_morelore_item_title"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/view_morelore_item_img"
        android:maxLines="3"
        android:text="速度快解放不舒服微分为符号库而粉丝看官方诉苦不舒服微分为符号库而粉丝看官方诉苦不舒服微分为符号库而粉丝看官方诉苦摄如果连生日了射日弓绿色落日高速路如果"
        android:textSize="12.6dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view_morelore_item_desc"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/view_morelore_item_img"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/eye"/>

        <TextView
            android:id="@+id/view_morelore_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:singleLine="true"
            android:text="139次"
            android:textSize="11sp"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/time"/>

        <TextView
            android:id="@+id/view_morelore_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:singleLine="true"
            android:text="2016-3-6"
            android:textSize="11sp"/>

    </LinearLayout>

</RelativeLayout>