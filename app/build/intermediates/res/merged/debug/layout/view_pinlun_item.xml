<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/view_pinlun_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/head"
        app:civ_border_color="@color/line_color"
        app:civ_border_width="0.5dp"/>

    <TextView
        android:id="@+id/view_pinlun_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/view_pinlun_img"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="6dp"
        android:singleLine="true"
        android:text="隔壁的王叔叔"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/view_pinlun_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view_pinlun_account"
        android:layout_toRightOf="@+id/view_pinlun_img"
        android:paddingLeft="6dp"
        android:text="2小时前"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/view_pinlun_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view_pinlun_time"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/view_pinlun_img"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColor="@color/black"
        android:textSize="12sp"/>


</RelativeLayout>