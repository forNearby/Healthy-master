<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="170dip"
                android:minHeight="170dip"
                android:background="#eeeeeeee"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/viewpager_banner_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:minHeight="170dip"
        android:src="@mipmap/loading"/>

    <View
        android:id="@+id/viewpager_banner_noneview"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dip"
        android:layout_toLeftOf="@id/viewpager_banner_noneview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewpager_banner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:background="#aaffffff"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:text="加载中..."
            android:textColor="@color/black"
            android:textSize="@dimen/banner_item_title_size"/>

        <TextView
            android:id="@+id/viewpager_banner_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#aaffffff"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:text="加载中..."
            android:textColor="@color/black"
            android:textSize="@dimen/banner_item_smalltitle_size"/>

        <TextView
            android:id="@+id/viewpager_banner_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:background="#aaffffff"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:textColor="@color/black"
            android:textSize="@dimen/banner_item_smalltitle_size"/>


    </LinearLayout>


</RelativeLayout>